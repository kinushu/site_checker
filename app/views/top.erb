<h1>SiteMapChecker</h1>

<form action="/" method="get">
<p>
URL：<input type="text" name="url" value="<%== @url.to_s %>" size="80">
</p>
<p>
<input type="submit" value="送信">
</p>
</form>

<% if @res %>

<h2>
<a href="<%== @res[:url] %>">
<%== @res[:title] %><br>
<%== @res[:url] %>
</a>
</h2>

<table border=1 >
<%
	@res[:links].each do |href,link|
%>
	<tr>
		<td><a href="<%== link.real_href %>"><%== href %></a></td>
		<td><%== link.text %></td>
	</tr>

<% end %>
</table>

<% end %>
